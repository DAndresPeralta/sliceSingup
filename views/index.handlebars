<main id="seccion-principal">
  <section id="firstWrap" class="conteiner">
    <h1 id="title">INGRESO</h1>
    <div class="form-container">
      <div class="form-box">
        <h1 class="title">Administrador</h1>
        {{! !FORMULARIO 1 }}
        <form id="adminForm">
          <label class="lbl" for="adminName">
            <i class="fa-solid fa-user-tie"></i>
            <input
              type="email"
              name="adminName"
              id="adminName"
              placeholder="Ingrese su correo electrónico"
            />
          </label>
          <label for="adminPassword">
            <i class="fa-solid fa-lock"></i>
            <input
              type="password"
              name="adminPassword"
              id="adminPassword"
              placeholder="Ingrese una contraseña"
            />
          </label>
          <button type="submit" id="btnAdmin">Ingresar</button>
        </form>
      </div>
      <div class="form-box">
        <h1 class="title">Usuario</h1>
        {{! !FORMULARIO 2 }}
        <form id="userForm">
          <label class="lbl" for="userName">
            <i class="fa-solid fa-user-tie"></i>
            <input
              type="email"
              name="userName"
              id="userName"
              placeholder="Ingrese su correo electrónico"
            />
          </label>
          <label for="userPassword">
            <i class="fa-solid fa-lock"></i>
            <input
              type="password"
              name="userPassword"
              id="userPassword"
              placeholder="Ingrese una contraseña"
            />
          </label>
          <button type="submit" id="btnUser">Ingresar</button>
        </form>
      </div>
    </div>
  </section>
